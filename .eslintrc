{
  "parser": "babel-eslint",
  "plugins": ["react", "jest"],
  "extends": ["eslint:recommended", "plugin:react/recommended", "plugin:jest/recommended"],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "react/jsx-curly-brace-presence": [2, { "props": "always" }],
    "max-len": ["error", 140]
  },
  "globals": {
    "__DEV__": true
  },
  "settings": {
    "react": { "version": "latest" }
  },
}
